{% extends 'admin.html.twig' %}

{% block title %}Technos index{% endblock %}

{% block body %}
    <h1>Technos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Picture</th>
                <th>Name</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for techno in technos %}
            <tr>
                <td>{{ techno.id }}</td>
                <td><img src="{{ asset('uploads/photos/' ~ techno.picture) }}" width="100"></td>
                <td>{{ techno.name }}</td>
                <td>{{ techno.content }}</td>
                <td>
                    <a href="{{ path('admin_technos_edit', {'id': techno.id}) }}">edit</a>
                    {{ include('admin/technos/_delete_form.html.twig') }}
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_technos_new') }}">Create new</a>
{% endblock %}
