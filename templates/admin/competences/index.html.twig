{% extends 'base.html.twig' %}

{% block title %}Gerer les competences
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Gérer les competences</h1>
        <a href="{{path ("admin_competences_new")}}" class="btn shadow-1 rounded-1 blue">Ajouter une compétence</a>
		<div class="responsive-table">
			<table class="table striped">
				<thead>
					<tr>
						<th>id</th>
						<th>Nom</th>
						<th>contenu</th>
						<th>Photo/Picto</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					{%for competence in competences%}
						<tr>
							<td>{{competence.id}}</td>
							<td>{{competence.name}}</td>
							<td>{{competence.content}}</td>
							<td>{{competence.picture}}</td>
							<td class="text-center">
								
								<a href="#" class="btn shadow-1 rounded-1 blue">Normal button</a>
							</td>
						</tr>
                    {%endfor%}
					</tbody>
				</tbody>
			</table>
		</div>
		{# {{<pre>
        {{ dump(competences) }}
	</pre>}} #}

</div>{% endblock %}
